function calculate() {
    var P = document.getElementById("initial");
    var r = document.getElementById("rate");
    var t = document.getElementById("years");
    var compound = document.getElementById("continuous");
    var times = document.getElementById("compounded");
    var finalamt = 0;


    if (compound == "yes")
        finalamt = P * ((math.E) ^ (r/100)*t);
    alert(finalamt);
}
